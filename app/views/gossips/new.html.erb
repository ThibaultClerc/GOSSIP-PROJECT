<h1>Coucou toi</h1>


<%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre du potin' %>
      <%= text_field_tag 'gossip_title'%>
      <br /> <br />

      <%= label_tag 'Le potin' %>
      <%= text_field_tag 'gossip_content'%>
      <br /> <br />
    
      <%= submit_tag "Créer le potin" %>

<% end %>

<% if @gossip.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div> <% end %>

