<h1 class="jumbotron text-center mb-5 mt-5">Ajoute un potin !</h1>

<% if @gossip.errors.any? %>
    <div class="alert alert-warning alert_message mx-auto" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>

<%= form_for @gossip, :html => {:class => "mt-5 form-signin text-center mx-auto user_form mb-5"} do |f|%>

  <div class="form-group">
    <%= f.text_field :title, class:"form-control", placeholder:"Titre" %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, class:"form-control", placeholder:"Contenu" %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-lg btn-primary btn-block">Créer le potin</button>
  </div>

  <% end %>
